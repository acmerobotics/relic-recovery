<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acmerobotics.cameraoverlay.MainActivity"
    android:id="@+id/activity_window"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/overlayStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/overlayTextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:fontFamily="@font/roboto"
            android:text="@string/overlayText"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/overlayOpen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_open_in_new_black_24dp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/accessibilityStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/accessibilityTextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:fontFamily="@font/roboto"
            android:text="@string/accessibilityText"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/accessibilityOpen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_open_in_new_black_24dp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dsStatus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp" />

        <TextView
            android:id="@+id/dsTextView"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:fontFamily="@font/roboto"
            android:text="@string/dsText"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dsOpen"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="12dp"
            app:srcCompat="@drawable/ic_open_in_new_black_24dp" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/openDsText"
        android:id="@+id/openButton"
        android:enabled="false" />

</LinearLayout>
